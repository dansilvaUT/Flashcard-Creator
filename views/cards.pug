extends layout

block content
    div.container.card-content
        h1.cards-header View Flashcards Here
        div.container.card-div
            each card in cards
                div.container.card-list-master
                    div.container.card-list
                        div.container.front
                            h1 Question
                            p=card.question
                        div.container.back
                            h1 Answer
                            p=card.answer
                    div.container.delete-btn-container
                        form.delete-btn-form(action='/delete')
                            button.btn.btn-danger(type='submit', value='Submit') Delete Card