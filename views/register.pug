extends layout

block content
    div.container.sign-content
        h1.sign-up-header Register for An Account
        form.sign-up-form(action='/register' method='POST')
            .form-group.reg-group
                label(for='email') Email:
                input#email.form-control(type='email' name='email' placeholder='Enter email')
            .form-group.reg-group
                label(for='username') Username:
                input#email.form-control(type='text' name='username' placeholder='Enter username')
            .form-group.reg-group
                label(for='pwd') Password:
                input#pwd.form-control(type='password' name='password' placeholder='Enter password')
            .form-group.reg-group
                label(for='pwd') Confirm Password:
                input#pwd.form-control(type='password' name='confirmPassword' placeholder='Confirm password')
            div.container.btn-container-reg
                button.btn.register-btn(type='submit' role='button') Register
