extends layout

block content
    div.container.sign-content
        form.sign-up-form()
            .form-group.reg-group
                label(for='email') Email address:
                input#email.form-control(type='email' placeholder='Enter email')
            .form-group.reg-group
                label(for='pwd') Password:
                input#pwd.form-control(type='password' placeholder='Enter password')
            .form-group.reg-group
                label(for='pwd') Confirm Password:
                input#pwd.form-control(type='password' placeholder='Confirm password')
            //TODO add form for BUTTON to register user
            div.container.btn-container-reg
                a.btn.register-btn(href='#' role='button') Register
